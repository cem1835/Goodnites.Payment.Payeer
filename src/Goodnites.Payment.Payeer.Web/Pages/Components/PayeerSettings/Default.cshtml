@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.SettingManagement.Localization
@inject IHtmlLocalizer<AbpSettingManagementResource> L
@model Goodnites.Payment.Payeer.PayeerSettingsDto


<form id="PayeerSettings">
    <abp-row>
        <abp-column size-md="_12">
            <div>
                <abp-input asp-for="MerchantId" label="@L["Payeer Merchant Id"].Value"></abp-input>
                <abp-input asp-for="SecretKey" label="@L["Payeer SecretKey"].Value"></abp-input>
                <abp-input asp-for="Min" label="@L["Payeer Min"].Value"></abp-input>
                <abp-input asp-for="Max" label="@L["Payeer Max"].Value"></abp-input>
            </div>
            <hr class="my-4"/>
            <div>
                <abp-button button-type="Primary" type="submit">
                    <i class="fa fa-save"></i> @L["Save"]
                </abp-button>
            </div>
        </abp-column>
    </abp-row>
</form>